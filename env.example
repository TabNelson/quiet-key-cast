# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Hardhat Private Key (for Sepolia deployment)
# Get from MetaMask: Export Private Key
PRIVATE_KEY=your_private_key_here

# Infura API Key (for Sepolia network)
# Get from: https://infura.io/
INFURA_API_KEY=your_infura_api_key_here

# WalletConnect Project ID (for wallet connections)
# Get from: https://cloud.walletconnect.com/
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Optional: Custom RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
LOCAL_RPC_URL=http://localhost:8545

# Optional: Contract Addresses (will be auto-detected if not set)
# CONTRACT_ADDRESS_LOCAL=0x5FbDB2315678afecb367f032d93F642f64180aa3
# CONTRACT_ADDRESS_SEPOLIA=0x...

# Optional: FHEVM Configuration
FHEVM_NETWORK=localhost
FHEVM_RELAY_URL=https://relayer.fhevm.zama.ai
